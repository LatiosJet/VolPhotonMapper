@using Microsoft.AspNetCore.Mvc

@namespace SeeSharp.Blazor

@inherits SettingBase<float>

@{
    base.BuildRenderTree(__builder);
}

@code {
    protected override string Type => "number";

    [Parameter] public float? Step { get; set; } = null;

    protected override float ParseValue(ChangeEventArgs e)
    {
        if (float.TryParse((string)e.Value, out float result))
            return result;
        return Value;
    }

    protected override Dictionary<string, object> CustomAttributes => new() {
        { "step", Step?.ToString() ?? "any" }
    };
}

