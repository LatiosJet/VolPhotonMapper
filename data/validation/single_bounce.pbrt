LookAt 0 0 0  # eye
       0 0 -1 # look at point
       0 1 0  # up vector
Camera "perspective" "float fov" 40

Sampler "random" "integer pixelsamples" 10
Integrator "bdpt" "integer maxdepth" 3  "bool visualizeweights" "true"
Film "image" "string filename" "single_bounce.exr"
     "integer xresolution" [512] "integer yresolution" [512]

WorldBegin

# Ground plane
AttributeBegin
  Material "matte" "rgb Kd" [1 1 1]
  Translate 0 0 -2
  Shape "trianglemesh"
      "integer indices" [0 1 2 0 2 3]
      "point P" [ -10 -10 0   10 -10 0   10 10 0   -10 10 0 ]
AttributeEnd

# Emitter
AttributeBegin
  Material "matte" "rgb Kd" [0 0 0]
  Translate 0 0 1

  AreaLightSource "diffuse" "rgb L" [1000 1000 1000]
#  ReverseOrientation

  Shape "trianglemesh"
      "integer indices" [0 1 2 0 2 3]
      "point P" [ -0.1 -0.1 0   0.1 -0.1 0   0.1 0.1 0   -0.1 0.1 0 ]
AttributeEnd

# Reflector
AttributeBegin
  Material "matte" "rgb Kd" [1 1 1]
  Translate 0 0 2
  Shape "trianglemesh"
      "integer indices" [0 1 2 0 2 3]
      "point P" [ -10 -10 0   10 -10 0   10 10 0   -10 10 0 ]
AttributeEnd

WorldEnd